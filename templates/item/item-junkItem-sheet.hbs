<form class="{{ cssClass }}{{#isVaultTec}} vaulttec {{/isVaultTec}}" autocomplete="off">
    <header class="sheet-header">
        <img class="profile-img" src="{{ item.img }}" data-edit="img" data-tooltip="{{ item.name }}" />
        <div class="header-fields">
            <h1 class="charname">
                <input name="name" type="text" value="{{ item.name }}" placeholder="Name" />
                </h1>
            <div class="grid grid-3col">
                <div class="weapon-label">Qty:<input style="width:30px;" type="number" name="system.quantity" value="{{ system.quantity }}" /></div>
                <div class="weapon-label">Load:<input style="width:30px;" type="number" name="system.load" value="{{ system.load }}" /></div>
                <div class="weapon-label">Cost:<input style="width:30px;" type="number" name="system.cost" value="{{ system.cost }}" /></div>

            </div>
        </div>
    </header>
    {{!-- Sheet Tab Navigation --}}
<nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="breakdown">Breakdown</a>
    <a class="item" data-tab="effects">Effects</a>
</nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">
        {{!-- Description Tab --}}
        <div class="tab" item-description data-group="primary" data-tab="description">
                <div style="border:solid 1px;padding:5px;min-height:200px;">
                    {{editor system.description target="system.description" rollData=rollData button=true owner=owner engine="prosemirror" editable=editable}}
                </div>
        </div>
        {{!-- Breakdown Tab --}}
        <div class="tab breakdown" data-group="primary" data-tab="breakdown">
            {{> "systems/arcane-arcade-fallout/templates/item/parts/item-breakdown.hbs"}}
        </div>
        {{!-- Effects Tab --}}
        <div class="tab effects" data-group="primary" data-tab="effects">
            {{> "systems/arcane-arcade-fallout/templates/item/parts/item-effects.hbs"}}
        </div>
    </section>
</form>
