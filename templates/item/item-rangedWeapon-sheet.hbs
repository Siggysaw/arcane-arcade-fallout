<style>
  .sheet .editor-content {
    line-height: 2;
  }
</style>

<form class="{{ cssClass }}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{ item.img }}" data-edit="img" title="{{ item.name }}" /><br />
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{ item.name }}" placeholder="Name" />
      </h1>
      <table>
        <tr>
            <td style="text-align: left">
                Equipped:
                <input type="checkbox" name="system.itemEquipped" {{checked system.itemEquipped}} /><br />
                CND: <input style="width:50px;" type="number" name="system.decay" value="{{system.decay}}"max="10" min="0" />
                <br />Slots :
                <input style="text-align: center; width: 35px"
                       type="number"
                       name="system.slots"
                       value="{{ system.slots }}" />
                <br />Number Owned:<input style="text-align: center; width: 35px"
                                          type="number"
                                          name="system.quantity"
                                          value="{{ system.quantity }}" />
               
            </td>
          <td>
            <button
              style="max-width: fit-content; text-align: left"
              class="fakeButton"
              addUpgradeBtn
              id="addUpgradeBtn"
            >
              ADD
            </button>
            <select name="upgradesSelector" data-itemType="ranged" id="upgradesSelector">
              <option value="Upgrades">Upgrades</option>
            </select>
            <div id="upgradeDetails" name="upgradeDetails"></div>
            <div id="upgradeCost" name="upgradeCost"></div>
            <br />Energy Weapon:
            <input type="checkbox" name="system.energyWeapon" {{checked system.energyWeapon}} />
          </td>
        </tr>
      </table>
      <table class="equipped-stats" style="display: none;">
        <td>Ability</td>
        <td>
          <input
            style="width: 200px"
            type="text"
            name="system.abilityMod"
            value="{{ system.abilityMod }}"
          />
        </td>
      </table>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="crafting">Crafting</a>
    <a class="item" data-tab="upgrades" id="upgradesTab">Upgrades</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab" item-description  data-group="primary" data-tab="description">
      <table>
        <tr>
          <td>Cost</td>
          <td>AP</td>
          <td>STR</td>
        </tr>
        <tr>
          <td>
            <input type="number" name="system.cost" value="{{ system.cost }}" />
          </td>
          <td>
            <input type="number" name="system.apCost" value="{{ system.apCost }}" />
          </td>
          <td>
            <input
              type="number"
              name="system.strengthRequirement"
              value="{{ system.strengthRequirement }}"
            />
          </td>
        </tr>
        <tr>
          <td>Ammo</td>
          <td>Ammo Default</td>
          <td>Capacity</td>
          <td>Load</td>
        </tr>
        <tr>
          <td>
            <input type="text" name="system.ammo.type" value="{{ system.ammo.type }}" />
          </td>
          <td>
            <input type="text" name="system.ammo.assigned" value="{{ system.ammo.assigned }}" />
          </td>
          <td style="display: flex; align-items: center">
            <input
              type="number"
              name="system.ammo.capacity.value"
              value="{{ system.ammo.capacity.value }}"
            />
            /
            <input
              type="number"
              name="system.ammo.capacity.max"
              value="{{ system.ammo.capacity.max }}"
            />
          </td>
          <td>
            <input type="number" name="system.load" value="{{ system.load }}" />
          </td>
        </tr>
      </table>
      <table class="equipped-stats" style="width: 300px">
        <tr>
          <td>Short Range:</td>
          <td>
            <input type="text" name="system.range.short" value="{{ system.range.short }}" />
          </td>
        </tr>
        <tr>
          <td>Long Range:</td>
          <td>
            <input type="text" name="system.range.long" value="{{ system.range.long }}" />
          </td>
        </tr>
      </table>

      {{> "systems/arcane-arcade-fallout/templates/item/parts/weapon-damage.hbs"}}
      <br />
      <h3>Notes:</h3>
      {{!-- To render inline rolls in a TinyMCE editor, you need to pass the parent actor's (if any) roll data to the rollData prop. --}}
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner engine="prosemirror" editable=editable}}
    </div>
    {{!-- Crafting Tab --}}
    <div class="tab crafting" data-group="primary" data-tab="crafting">
      {{> "systems/arcane-arcade-fallout/templates/item/parts/item-breakdown.hbs"}}
      {{> "systems/arcane-arcade-fallout/templates/item/parts/item-crafting.hbs"}}
    </div>
    {{!-- Upgrades Tab --}}
    <div class="tab" data-armor-id data-group="primary" data-tab="upgrades">
      {{#LesserThan system.baseCost.base 1}}
      <div>
        Select an upgrade and press the ADD button above to upgrade your weapon. Upgrades will
        appear here as you add them.
      </div>
      {{else}}
      <ol>
        {{#each system.upgrades as |key|}}
        {{#if key.id}}
        <div class="box-perks">
          <li class="item flexrow" data-item-id="{{ key.id }}">
            <table class="perk-table" style="border: solid 1px">
              <tr>
                <td>
                  <div class="perk-div">
                    <h3>{{ key.name }}</h3>
                    <a class="item-control" seeUpgrade id="{{ key.id }}" title="View Item Details">
                      <img title="{{ key.description }}" class="perk-image" src="{{ key.img }}" />
                    </a>
                  </div>
                  <div class="perk-div">
                    {{ key.rank }}
                  </div>
                  <li class="item flexrow" data-item-id="{{ item._id }}">
                    <div class="item-controls" style="background: black">
                      <a
                        class="item-control upgrade-delete"
                        deleteUpgrade
                        title="Delete Upgrade"
                        id="delete{{ key.id }}"
                      >
                        <i class="fas fa-trash"></i>
                      </a>
                    </div>
                  </li>
                </td>
              </tr>
            </table>
          </li>
        </div>
        {{/if}}
        {{/each}}
      </ol>
      {{/LesserThan}}
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/arcane-arcade-fallout/templates/item/parts/item-effects.hbs"}}
    </div>
  </section>
</form>

{{log system}}
