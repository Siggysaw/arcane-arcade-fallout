{{#each traits as |item id|}}
<div style="width: 33%; float: left;min-height:265px;">
    <li class="item flexrow" data-item-id="{{ item._id }}">
        <table class="perk-table" style="border: solid 1px">
            <tr>
                <td>
                    <div class="perk-div">
                        <h3>{{ item.name }}</h3>
                        <a class="item-control"
                           data-edit
                           data-item-id="{{ item._id }}"
                           title="View Item Details">
                            <img class="perk-image" src="{{ item.img }}" />
                        </a>
                    </div>
                    <div class="perk-div">
                        <p style="margin-top:-3px">TRAIT</p>
                    </div>
                    <div class="perk-div">
                        <a style="float: right; margin-right: 10px;margin-top:-20px;"
                           class="item-control item-delete"
                           title="{{localize 'DOCUMENT.Delete' type='item'}}">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </table>
    </li>
</div>
{{/each}}

