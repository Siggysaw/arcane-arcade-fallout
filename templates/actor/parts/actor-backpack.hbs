<style>
    .sheet .backpack i{
        cursor:default;
    }
</style>
<div class="grid grid-2col backpack-tab">
    <div class="left segment">
        <h3>Weapons</h3>
        <div class="grid grid-20col labels">
            <i class="fas fa-tshirt"></i>
            <div class="grid-span-10">Name</div>
            <div class="grid-span-3 caps-icon icon"><img class="custom-icon"src="/systems/arcane-arcade-fallout/assets/caps.webp" /></div>
            <div class="grid-span-3">#</div>
            <div class="grid-span-3"><i class="fas fa-weight-hanging"></i></div>
        </div>
        {{#each rangedWeapons as |item id|}}
    <div class="grid grid-20col backpack-row" data-item-id="{{item._id}}">
        <div>
            <i data-equipToggle data-item-id="{{ item._id}}"
               class="pointer {{#if system.itemEquipped}}
            far fa-check-circle{{else}}far fa-circle{{/if}}">
            </i>
        </div>
        <div class="grid-span-10 context-menu" data-item-id="{{item._id}}">
            <li class="item" data-item-id="{{ item._id }}" draggable="true">
                {{item.name}}
        </div>
        <div class="grid-span-3">{{item.system.cost}}</div>
        <div class="grid-span-3">{{item.system.quantity}}</div>
        <div class="grid-span-3" data-tooltip="Qty ({{item.system.quantity}}) x Load ({{item.system.load}})" data-tooltip="Qty ({{item.system.quantity}}) x Load ({{item.system.load}})">{{#Multiply item.system.load item.system.quantity}}{{/Multiply}}</div>
    </div>
        {{/each}}
        {{#each meleeWeapons as |item id|}}
        <div class="grid grid-20col backpack-row" data-item-id="{{item._id}}">
            <div>
                <i data-equipToggle data-item-id="{{ item._id}}"
                   class="pointer {{#if system.itemEquipped}}
                   far fa-check-circle{{else}}far fa-circle{{/if}}">
                </i>
            </div>
            <div class="grid-span-10 context-menu" data-item-id="{{item._id}}">
            <li class="item" data-item-id="{{ item._id }}" draggable="true">{{item.name}}</li></div>
            <div class="grid-span-3">{{item.system.cost}}</div>
            <div class="grid-span-3">{{item.system.quantity}}</div>
            <div class="grid-span-3" data-tooltip="Qty ({{item.system.quantity}}) x Load ({{item.system.load}})">{{#Multiply item.system.load item.system.quantity}}{{/Multiply}}</div>
        </div>
        {{/each}}
        <h3>Ammunition</h3>
        <div class="grid grid-20col labels">
            <div class="grid-span-11">Name</div>
            <div class="grid-span-3 caps-icon icon"><img class="custom-icon"src="/systems/arcane-arcade-fallout/assets/caps.webp" /></div>
            <div class="grid-span-3">#</div>
            <div class="grid-span-3"><i class="fas fa-weight-hanging"></i></div>
        </div>
        {{#each ammos as |item id|}}
        {{#GreaterThan item.system.quantity 1}}
