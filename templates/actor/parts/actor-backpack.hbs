<style>
  .sheet table .foodanddrinks td {
    border: solid 1px;
    vertical-align: middle;
  }
</style>
<table class="equipped-stats">
<tr><td style="width:45%;vertical-align:top">
<h3>Ranged Weapons</h3>
{{#each rangedWeapons as |item id|}}
{{#unless item.system.itemEquipped}}
<li style="float:left;" class="item flexrow" data-item-id="{{ item._id }}">
  <div class="item-controls">
	<a
	  class="item-control"
	  data-edit
	  data-item-id="{{ item._id }}"
	  title="{{localize 'DOCUMENT.Update' type='item'}}"
	>
	  {{item.name}}({{item.system.quantity}}) 
	</a>                <a
	  class="item-control item-delete"
	  title="{{localize 'DOCUMENT.Delete' type='item'}}"
	>
	  <i class="fas fa-trash"></i>
	</a>
  </div>
</li>
{{/unless}}
{{/each}}
</td><td  style="width:45%;vertical-align:top">
<h3>Melee Weapons</h3>
{{#each meleeWeapons as |item id|}}
{{#unless item.system.itemEquipped}}
<li style="float:left;" class="item flexrow" data-item-id="{{ item._id }}">
  <div class="item-controls">
	<a
	  class="item-control"
	  data-edit
	  data-item-id="{{ item._id }}"
	  title="{{localize 'DOCUMENT.Update' type='item'}}"
	>
	  {{item.name}}({{item.system.quantity}}) 
	</a>                <a
	  class="item-control item-delete"
	  title="{{localize 'DOCUMENT.Delete' type='item'}}"
	>
	  <i class="fas fa-trash"></i>
	</a>
  </div>
</li>
{{/unless}}
{{/each}}
</td></tr>
</table>

<table class="backpack">
  <tr>
    <td>
        {{#if foodAnddrinks}}
      <table class="foodanddrinks">
		<tr><td>Name</td><td>Description</td><td>Load</td><td></td></tr>
        {{#each foodAnddrinks as |item id|}}
        <tr>
          <td style="width: 100px">
            <span class="label"> {{ item.name }} ({{ system.quantity }}) </span>
          </td>

          <td>
            {{{ item.system.description }}}
          </td><td>
			{{item.system.load}}
		  </td>
          <td class="td-controls">
            <li class="item flexrow" data-item-id="{{ item._id }}">
              <div class="item-controls">
                <a
                  class="item-control"
                  data-edit
                  data-item-id="{{ item._id }}"
                  title="{{localize 'DOCUMENT.Update' type='item'}}"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <a
                  class="item-control item-delete"
                  title="{{localize 'DOCUMENT.Delete' type='item'}}"
                >
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </li>
          </td>
        </tr>
        {{/each}}
      </table>
        {{/if}}
    </td>
    <td class="spacer"></td>
    <td style="min-width:300px">
 
    </td>
  </tr>
  <tr>
      <td colspan=999 >
      <div style="width:75%;display:block;margin:auto;">
        {{#if chems}}
          <table  class="foodanddrinks">
		<tr><td colspan=999>CHEMS</td></tr>
        {{#each chems as |item id|}}
        <tr>
          <td>
            <span class="label" style="margin-right: 5px">
              {{ item.name }} ({{ system.quantity }})
            </span>
          </td>

          <td style="width: 70%; text-align: left; padding: 10px;">
            {{{ item.system.description }}}
            <li class="item flexrow" data-item-id="{{ item._id }}">
              <div class="item-controls">
                <a
                  style="float: right; margin-right: 10px"
                  class="item-control item-delete"
                  title="{{localize 'DOCUMENT.Delete' type='item'}}"
                >
                  <i class="fas fa-trash"></i>
                </a>
                <a
                  style="float: right; margin-right: 10px"
                  class="item-control"
                  data-edit
                  data-item-id="{{ item._id }}"
                  title="{{localize 'DOCUMENT.Update' type='item'}}"
                >
                  <i class="fas fa-edit"></i>
                </a>
              </div>
            </li>
          </td>
        </tr>
        {{/each}}
      </table>
          {{/if}}
      </div>
    </td>
  </tr>
</table>
