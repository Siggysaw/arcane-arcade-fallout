                </i>
            </div>
            <div class="grid-span-10 context-menu" data-item-id="{{item._id}}"><li class="item" data-item-id="{{ item._id }}" draggable="true" data-tooltip="{{item.system.description}}">{{item.name}}</li></div>
            <div class="grid-span-3">{{item.system.cost}}</div>
            <div class="grid-span-3">{{item.system.quantity}}</div>
            <div class="grid-span-3" data-tooltip="Qty ({{item.system.quantity}}) x Load ({{item.system.load}})">{{#Multiply item.system.load item.system.quantity}}{{/Multiply}}</div>
        </div>
        {{/each}}
        {{#if armorUpgrades}}<h3>Armor upgrades</h3>{{/if}}
        {{#each armorUpgrades as |item id|}}
        <div class="grid grid-20col backpack-row" data-item-id="{{item._id}}">
            <div>
                <i class="pointer {{#if system.equipped}} far fa-check-circle{{else}}far fa-circle{{/if}}">
                </i>
            </div>
            <div class="grid-span-10 context-menu" data-item-id="{{item._id}}"><li class="item" data-item-id="{{ item._id }}" draggable="true" data-tooltip="{{item.system.description}}">{{item.name}} ({{system.type}})</li></div>
            <div class="grid-span-3">{{item.system.cost}}</div>
            <div class="grid-span-3">{{item.system.quantity}}</div>
            <div class="grid-span-3" data-tooltip="Qty ({{item.system.quantity}}) x Load ({{item.system.load}})">{{#Multiply item.system.load item.system.quantity}}{{/Multiply}}</div>
        </div>
        {{/each}}
    </div>
    </div>
