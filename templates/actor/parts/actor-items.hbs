<table>
  <tr>
    <td class="armorbox rangedbox">
      <h3>Ranged Weapons</h3>
      {{>
            "systems/arcane-arcade-fallout/templates/actor/items/equipped-ranged-weapons.hbs"
            rangedWeapons=rangedWeapons
            abilities=system.abilities
            skills=system.skills
      }}
              <h3>Melee Weapons</h3>
      {{>
            "systems/arcane-arcade-fallout/templates/actor/items/equipped-melee-weapons.hbs"
            meleeWeapons=meleeWeapons
            abilities=system.abilities
            skills=system.skills
      }}
    </td>
    <td class="armorbox meleebox">
        <table style="border:solid 1px;">
            <!-- Armor Slot -->
{{#each armors as |item id|}}
{{#if item.system.itemEquipped}}
<td colspan="2" class="context-menu"
    data-item-id="{{ item._id }}"
    title="{{localize 'DOCUMENT.Update' type='item'}}">
    {{item.name}}
</td>
<tr>
<tr style="vertical-align: middle">
    <td colspan="999" title="0 is Broken, 10 is Full Functionality">
        CND:
        {{#if editToggle}} <input title="0 is Broken, 10 is Full Functionality"
                                  style="width: 50px"
                                  type="number"
                                  name="{{ item.system.decay }}"
                                  value="{{/if}}{{ item.system.decay }}{{#if editToggle}}"
                                  data-set-decay
                                  data-weapon-id="{{ item._id }}" />{{/if}}
            <i style="padding: 2px;"
               data-reduce-decay
               data-field="item.system.decay"
               data-fieldvalue="{{item.system.decay}}"
               data-weapon-id="{{ item._id }}"
               class="fas fa-minus-square fakebutton nobackground">
            </i>
        <progress title="{{item.system.decay}} out of 10"
                  style="width:40%;"
                  class="statusbar"
                  value="{{ item.system.decay }}"
                  max=10>
            {{ item.system.decay }}
        </progress>
            <i style="padding: 2px;"
               data-add-decay
               data-field="item.system.decay"
               data-fieldvalue="{{item.system.decay}}"
               data-weapon-id="{{ item._id }}"
               class="fas fa-plus-square fakebutton nobackground">
            </i>
    </td>
</tr>
    </tr>
{{/if}}
{{/each}}
{{#each powerArmors as |item id|}}
{{#if item.system.itemEquipped}}
<td class="context-menu"
    data-item-id="{{ item._id }}"
    title="{{localize 'DOCUMENT.Update' type='item'}}">
    {{item.name}}
</td>
<td title="Armor HP = Armor DP x CND">HP:{{item.system.armorHP.value}}</td>
</tr>
{{/if}}
{{/each}}
                    <tr>
                        <td class="skill-value">
                            {{#if system.editToggle}}<i style="padding: 3px"
                                                        data-statSubtraction
                                                        data-stat="armorClass"
                                                        data-type=""
                                                        class="fas fa-minus-square fakebutton nobackground"></i>{{/if}}
                            AC:{{ system.armorClass.value }}
                            {{#if system.editToggle}}<i style="padding: 3px"
                                                        data-statAddition
                                                        data-stat="armorClass"
                                                        data-type=""
                                                        class="fas fa-plus-square fakebutton nobackground"></i>{{/if}}
                        </td>
                        <td class="skill-value">
                            {{#if system.editToggle}}<i style="padding: 3px"
                                                        data-statSubtraction
                                                        data-stat="damageThreshold"
                                                        data-type=""
                                                        class="fas fa-minus-square fakebutton nobackground"></i>{{/if}}
                            DT:{{ system.damageThreshold.value }}
                            {{#if system.editToggle}}<i style="padding: 3px"
                                                        data-statAddition
                                                        data-stat="damageThreshold"
                                                        data-type=""
                                                        class="fas fa-plus-square fakebutton nobackground"></i>{{/if}}
                        </td>
                     </tr>
                  </table>
      <details {{#if system.combatActionsexpanded }} open="true" {{/if}}>
          <summary data-combatExpand style="padding:7.5px;background:#222;text-transform:uppercase;color:white;">Combat Actions</summary>
      {{> "systems/arcane-arcade-fallout/templates/actor/items/combat-actions-tab.hbs" }}
        </details>
    </td>
      </tr>
    <tr>
    {{#if explosives}}
    <td class="armorbox" colspan="999">
      <h3>Explosives</h3>
      {{>
            "systems/arcane-arcade-fallout/templates/actor/items/explosives.hbs"
            explosives=explosives
            abilities=system.abilities
            skills=system.skills
            penaltyTotal=penaltyTotal
      }}
    {{/if}}
  </tr>
</table>
