<table>
    <tr>
        {{#if armors}}
        <td class="armorbox">
            <!-- Armor Slot -->
            {{#each armors as |item id|}}
            {{#if item.system.itemEquipped}}
            <div class="item flexrow" data-item-id="{{ item._id }}">
                <table class="item-box">
                    <tr>
                        <td>
                            <details open="true">
                                <summary>
                                    <p class="allcaps">{{ item.name }}</p>
                                </summary>
                                <table class="equipped-stats">
                                    <tr>
                                        <td>Cost</td>
                                        <td>AC</td>
                                        <td>DT</td>
                                        <td>Slots</td>
                                        <td>Load</td>
                                        <td>STR Req.</td>
                                    </tr>
                                    <tr>
                                        <td>{{ system.baseCost.value }}</td>
                                        <td>{{ system.armorClass.value }}</td>
                                        <td>{{ system.damageThreshold.value }}</td>
                                        <td>{{ system.slots.value }}</td>
                                        <td>{{ system.load }}</td>
                                        <td>{{ system.strReq.value }}</td>
                                    </tr>
                                    <tr>
                                        <td colspan='999'>
                                            CND: <input style="width:50px;" type="number" name="{{item.system.decay}}" value="{{item.system.decay}}" data-set-decay data-weapon-id="{{ item._id }}">
                                            <progress style="width:60%;text-align:right;"
                                                      class="statusbar stamina"
                                                      value="{{item.system.decay}}"
                                                      max="10">
                                                {{item.system.decay}}
                                            </progress>
                                        </td>
                                    </tr>
                                </table>
                            </details>
                            <div class="item-controls">
                                <a style="float: right; margin-right: 10px"
                                   class="item-control item-delete"
                                   data-item-id="{{ item._id }}"
                                   title="{{localize 'DOCUMENT.Delete' type='item'}}">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a style="float: right; margin-right: 10px"
                                   data-edit
                                   data-item-id="{{ item._id }}"
                                   class="item-control"
                                   title="{{localize 'DOCUMENT.Update' type='item'}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                </table>
            </div>
            {{/if}}
            {{/each}}
        </td>
        {{/if}}
        <td>
            <!-- AMMO Slot -->
            {{#if ammos }}
            <table class="item-box">
                <tr>
                    <td>
                        <details open="true">
                            <summary>
                                <p class="allcaps">{{ item.name }} AMMO</p>
                            </summary>
                            {{#each ammos as |item id|}}
                            <div style="float:left;" data-item-id="{{ item._id }}">
                                <div class="item flexrow"
                                     data-item-id="{{ item._id }}">
                                    <div class="item-controls">
                                        <a data-edit
                                           data-item-id="{{ item._id }}"
                                           class="item-control"
                                           title="{{localize 'DOCUMENT.Update' type='item'}}">
                                            {{ item.name }} ({{ system.quantity }})
                                        </a>
                                        <a class="item-control item-delete"
                                           data-item-id="{{ item._id }}"
                                           title="{{localize 'DOCUMENT.Delete' type='item'}}">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                    </td>
                </tr>
            </table>
            </details>
            {{/if}}
        </td>
    </tr>
</table>
