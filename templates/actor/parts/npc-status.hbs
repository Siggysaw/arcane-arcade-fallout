                                <tr>
                                    <td>
                                        <details {{#if item.system.itemOpen }} open="true" {{/if}}>
                                            <summary data-expandtoggle data-itemid="{{item._id}}">
                                                <p class="allcaps">{{ item.name }}</p>
                                            </summary>
                                            <table class="equipped-stats">
                                                <tr>
                                                    <td>Cost</td>
                                                    <td>AC</td>
                                                    <td>DT</td>
                                                    <td>Slots</td>
                                                    <td>Load</td>
                                                    <td>STR Req.</td>
                                                </tr>
