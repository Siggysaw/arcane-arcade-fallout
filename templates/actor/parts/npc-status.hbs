<style>
    .specialroll {
        text-transform: uppercase;
    }
</style>

<table class="status-block">
    <tr>
        <td class="skill-table">
            <table>
                <tr>
                    {{#each system.skills as |skill key|}}
                </tr>

                <tr>
                    <td>
                        {{#each skill.ability as |ability|}}
                        <p class="specialroll">
                            <label for="{{ ability }}"
                                   class="resource-label rollable"
                                   data-rollable
                                   data-roll="d20+{{#Sum skill.value skill.modifiers}}{{/Sum}}+@{{ability}}.mod"
                                   data-label="{{ actor.name }} performed a {{ skill.label }} roll using {{ ability }}">
                                {{ ability }}
                            </label>
                        </p>
                        {{/each}}
                    </td>
                    <td class="skill-label">{{ skill.label }}</td>
                    <td class="skill-value">
                        <i style="padding: 3px"
                           data-skillsubtraction
                           data-skill="{{ skill.id }}"
                           class="fas fa-minus-square fakebutton nobackground">

                        </i>
                        {{#Sum3 skill.value skill.modifiers skill.base}}{{/Sum3}}
                        <i style="padding: 3px"
                           data-skilladdition
                           data-skill="{{ skill.id }}"
                           class="fas fa-plus-square fakebutton nobackground">
                        </i>
                    </td>
                </tr>
                {{/each}}
            </table>
        </td>
        <td class="status-table">
            <table>
                <tr>
                    <td>Healing Rate</td>
                    <td>Combat Sequence</td>
                    <td>Passive Sense</td>
                </tr>
                <tr>
                    <td>
                        <input type="number" name="system.healingRate" value="{{ system.healingRate }}" />
                    </td>
                    <td>
                        <input type="number" name="system.combatSequence" value="{{ system.combatSequence }}" />
                    </td>
                    <td>
                        <input type="number"
                               name="system.npcPassivesense"
                               value="{{ system.npcPassivesense }}" />
                    </td>
                </tr>
                <tr>
                    <td colspan="4" style="height: 400px; text-align: left; padding: 10px">
                        <!-- Armor Slot -->
                        {{#each armors as |item id|}}
                        {{#if item.system.itemEquipped}}
                        <div class="item flexrow" data-item-id="{{ item._id }}">
