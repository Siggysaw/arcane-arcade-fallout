{{#each medicines as |item id|}}
<div class="box-medicines">
  <li class="item flexrow" data-item-id="{{ item._id }}">
    <table class="perk-table" style="border: solid 1px">
      <tr>
        <td>
            <div class="perk-div">
                <h3>{{ item.name }}</h3>
                <div class="perk-div context-menu" data-item-id="{{ item._id }}" style="text-align:left;">
                    <i class="fas fa-ellipsis-v  context-icon perk-context" ></i>
                </div>
                <a class="item-control"
                   data-edit
                   draggable="true"
                   data-item-id="{{ item._id }}"
                   title="View Item Details">
                    <img class="perk-image" src="{{ item.img }}" />
                </a>
            </div>
          <div class="perk-div">
            <i
              style="padding: 3px"
              data-itemsubtraction
              data-item="{{ item._id }}"
              class="fas fa-minus-square"
            ></i>
            {{ system.quantity }}
            <i
              style="padding: 3px"
              data-itemaddition
              data-item="{{ item._id }}"
              class="fas fa-plus-square"
            ></i>
          </div>
        </td>
      </tr>
    </table>
  </li>
</div>
{{/each}}
