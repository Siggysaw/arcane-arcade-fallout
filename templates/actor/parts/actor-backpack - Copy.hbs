<table class="equipped-stats backpack">
    <tr>
        <td style="width:45%;vertical-align:top">
            <h3>Weapons and Armor</h3>
            {{#each rangedWeapons as |item id|}}
            {{#unless item.system.itemEquipped}}
            <li class="context-menu backpack-item item"
                  data-item-id="{{ item._id }}" 
                  draggable="true"
                  title="{{localize 'DOCUMENT.Update' type='item'}}">
                {{item.name}}({{item.system.quantity}})
            </li>
            {{/unless}}
            {{/each}}
            {{#each meleeWeapons as |item id|}}
            {{#unless item.system.itemEquipped}}
            <li class="context-menu backpack-item item"
                  data-item-id="{{ item._id }}" 
                  draggable="true"
                  title="{{localize 'DOCUMENT.Update' type='item'}}">
                {{item.name}}({{item.system.quantity}})
            </li>
            {{/unless}}
            {{/each}}
            {{#each armors as |item id|}}
            {{#unless item.system.itemEquipped}}
            <li class="context-menu backpack-item item"
                  data-item-id="{{ item._id }}" draggable="true"
                  title="{{localize 'DOCUMENT.Update' type='item'}}">
                {{item.name}}({{item.system.quantity}})
            </li>
            {{/unless}}
            {{/each}}
            {{#each powerArmors as |item id|}}
            {{#unless item.system.itemEquipped}}
            <li class="context-menu backpack-item item"
                  data-item-id="{{ item._id }}" draggable="true"
                  
                  title="{{localize 'DOCUMENT.Update' type='item'}}">
                {{item.name}}({{item.system.quantity}})
            </li>
            {{/unless}}
            {{/each}}
        </td>
    </tr>
    {{> "systems/arcane-arcade-fallout/templates/actor/items/ammo.hbs" ammos=ammos}}
</table>

<table class="backpack">
    <tr>
        <td style="width:60%;padding:5px;">
            <table class="equipped-stats">
                <tr><td colspan="999"><h3>Food and Drinks</h3></td></tr>
                <tr><td>Name</td><td style="width:100px;" style="width:100px;">Qty</td><td style="width:150px;">Properties</td><td></td></tr>
                {{#each foodAnddrinks as |item id|}}
                {{#unless item.system.itemEquipped}}
                <tr>
                    <td>
                        <li class="item flexrow" data-item-id="{{ item._id }}" draggable="true">
                            <div class="item-controls">
                                <a class="item-control item-name"
                                   data-edit
                                   data-item-id="{{ item._id }}" draggable="true"
                                   title="{{localize 'DOCUMENT.Update' type='item'}}">
                                    {{item.name}}
                                </a>
                            </div>
                        </li>
                    </td>

                    <td>
                        <i style="padding:3px;" data-itemsubtraction data-item="{{item._id}}" class="fas fa-minus-square"></i>
                        {{ system.quantity }}
                        <i style="padding:3px;" data-itemaddition data-item="{{item._id}}" class="fas fa-plus-square"></i>

                    </td>
                    <td class="food">{{{item.system.description}}}</td>
                    <td style="width:20px;" class="context-menu" data-item-id="{{ item._id }}">
                        <i class="fas fa-ellipsis-v context-icon" ></i>
                </td>
                </tr>
                {{/unless}}
                {{/each}}
            </table>
            <table class="equipped-stats">
                <tr><td colspan="999"><h3>Chems</h3></td></tr>
                <tr><td>Name</td><td style="width:100px;">Qty</td><td style="width:150px;">Properties</td><td></td></tr>
                {{#each chems as |item id|}}
                {{#unless item.system.itemEquipped}}
            <tr>
                <td>
                    <li class="item flexrow" data-item-id="{{ item._id }}" draggable="true">
                        <div class="item-controls">
                            <a class="item-control item-name"
                               data-edit
                               data-item-id="{{ item._id }}" draggable="true"
                               title="{{localize 'DOCUMENT.Update' type='item'}}">
                                {{item.name}}
                            </a>
                        </div>
                    </li>
                </td>

                <td>
                    <i style="padding:3px;" data-itemsubtraction data-item="{{item._id}}" class="fas fa-minus-square"></i>
                    {{ system.quantity }}
                    <i style="padding:3px;" data-itemaddition data-item="{{item._id}}" class="fas fa-plus-square"></i>

                </td>
                <td class="chems">{{{item.system.description}}}</td>
                <td style="width:20px;" class="context-menu" data-item-id="{{ item._id }}">
                    <i class="fas fa-ellipsis-v context-icon"></i>
                </td>
            </tr>
                {{/unless}}
                {{/each}}
            </table>
        </td>
        <td style="width:40%;padding:5px;">
            <div>
                <table class="equipped-stats">
                    <tr><td colspan=999><h3>MISC ITEMS</h3></td></tr>
                    <tr><td style="width:20px;"></td><td>Name</td><td style="width:80px" style="width:100px;">Qty</td></tr>
                    {{#each miscItems as |item id|}}
                    {{#unless item.system.itemEquipped}}
                <tr>
                    <td style="width:20px;" class="context-menu" data-item-id="{{ item._id }}">
                        <i class="fas fa-ellipsis-v context-icon"></i>
                    </td>
                    <td>
                        <li class="item flexrow" data-item-id="{{ item._id }}" draggable="true">
                            <div class="item-controls">
                                <a class="item-control item-name"
                                   data-edit
                                   data-item-id="{{ item._id }}"
                                   title="{{localize 'DOCUMENT.Update' type='item'}}">
                                    {{item.name}}
                                </a>
                            </div>
                        </li>
                    </td>

                    <td>
                        <i style="padding:3px;" data-itemsubtraction data-item="{{item._id}}" class="fas fa-minus-square"></i>
                        {{ system.quantity }}
                        <i style="padding:3px;" data-itemaddition data-item="{{item._id}}" class="fas fa-plus-square"></i>

                    </td>
                </tr>
                    {{/unless}}
                    {{/each}}
                </table>

      </div>
    </td>
  </tr>
</table>
