<table class="character-status">
    <tr>
        <td style="width:25px;">
            HP
        <td class="vertical-buttons">
            <i data-health="plus" class="fas fa-plus-square"></i>
            <i data-health="minus" class="fas fa-minus-square"></i>
        </td>
        <td>
            <table>
                <tr>
                    <input style="height:30px;" 
                    type="number"
                    class="numberwithbuttons"
                    name="system.health.value"
                    value="{{ health.value }}" />
                    /
                    <input style="height:30px" 
                    type="number"
                    class="numberwithbuttons"
                    name="system.health.max"
                    value="{{ health.max }}" />
                </tr>
                <tr>
                           Temp HP :
                    <input style="height:20px" 
                    type="number"
                    class="numberwithbuttons"
                    name="system.health.temp"
                    value="{{ health.temp }}" />
                </tr>                
            </table>
        </td>
    </tr>
    <tr>
        <td style="width:25px;">
            SP
        <td class="vertical-buttons">
            <i data-stamina="plus" class="fas fa-plus-square"></i>
            <i data-stamina="minus" class="fas fa-minus-square"></i>
        </td>
        <td>
            <table>
                <tr>
                    <input style="height:30px" 
                    type="number"
                    class="numberwithbuttons"
                    name="system.stamina.value"
                    value="{{ stamina.value }}" />
                    /
                    <input style="height:30px"  
                    type="number"
                    class="numberwithbuttons"
                    name="system.stamina.max"
                    value="{{ stamina.max }}" />
                </tr>
                <tr>
                    Temp SP :
                    <input style="height:20px"  
                    type="number"
                    class="numberwithbuttons"
                    name="system.stamina.modifiers"
                    value="{{ stamina.temp }}" />            
                </tr>
            </table>
            
        </td>
    </tr>
    <tr>
        <td style="width:25px;">
            AP
        <td class="vertical-buttons">
            <i data-action="plus" class="fas fa-plus-square"></i>
            <i data-action="minus" class="fas fa-minus-square"></i>
        </td>
        <td>
            <table>
                <tr>
                    <input style="height:30px"  
                    type="number"
                    class="numberwithbuttons"
                    name="system.actionPoints.value"
                    value="{{ system.actionPoints.value }}" />
                    /
                    <input style="height:30px"  
                    type="number"
                    class="numberwithbuttons"
                    name="system.actionPoints.max"
                    value="{{ system.actionPoints.max }}" />
                </tr>
                <tr>
                    Bonus AP:
                    <input style="height:20px"  
                    type="number"
                    class="numberwithbuttons"
                    name="system.actionPoints.temp"
                    value="{{ system.actionPoints.temp }}" />
                </tr>
            </table>  
        </td>
    </tr>
    </table>
<table style="width:200px;">
    <tr>
        <td>
            <div class="fakebutton" data-recycle-ap title="Refresh AP During Combat">
                <i class="fa-solid fa-recycle"></i>
            </div>
        </td>
        <td>
            <div class="fakebutton" data-refill-ap title="Refresh AP Outside of Combat">
                <i class="fa-regular fa-arrow-up-right-dots"></i>
            </div>
        </td>
    </tr>
    <tr>
        <td class="skill-value">
            <i style="padding: 3px"
               data-statSubtraction
               data-stat="armorClass"
               data-type=""
               class="fas fa-minus-square fakebutton nobackground"></i>
            {{ armorClass.value }}
            <i style="padding: 3px"
               data-statAddition
               data-stat="armorClass"
               data-type=""
               class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
               data-statSubtraction
               data-stat="damageThreshold"
               data-type=""
               class="fas fa-minus-square fakebutton nobackground"></i>
            {{ damageThreshold.value }}
            <i style="padding: 3px"
               data-statAddition
               data-stat="damageThreshold"
               data-type=""
               class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
    </tr>
    <tr>
        <td title="Armor Class (how hard it is to hit you)
        Total = {{#DifferentFrom armorClass.armor 10}}Armor{{else}}Unarmored{{/DifferentFrom}} ({{ armorClass.armor }}){{#DifferentFrom armorClass.modifiers 0}} + Effects ({{armorClass.modifiers}}){{/DifferentFrom}}{{#DifferentFrom armorClass.base 0}} + Manual Adjustments ({{armorClass.base}}){{/DifferentFrom}}">
            {{#FormatCompendium "Armor Class" "properties"}}{{/FormatCompendium}}
        </td>
        <td title="Damage Threshold (points deducted from damage)
        Total = {{#DifferentFrom armorClass.armor 0}}Armor{{else}}Unarmored{{/DifferentFrom}} ({{ damageThreshold.armor }}){{#DifferentFrom damageThreshold.modifiers 0}} + Effects ({{damageThreshold.modifiers}}){{/DifferentFrom}}{{#DifferentFrom damageThreshold.base 0}} + Manual Adjustments ({{damageThreshold.base}}){{/DifferentFrom}}">
            {{#FormatCompendium "Damage Threshold" "properties"}}{{/FormatCompendium}}
        </td>
    </tr>
</table>

