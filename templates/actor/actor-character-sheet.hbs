
<script>
function updatexp(change){
var current={{system.xp.value}};
document.getElementById("xp").value = Number(change) + Number(current);
document.getElementById("modifyxp").value = '';
}

function updatecaps(change){
var current={{system.caps.value}};
document.getElementById("caps").value = Number(change) + Number(current);
document.getElementById("modifycaps").value = '';
}
var penalties={{system.fatigue.value}}+{{system.hunger.value}}+{{system.dehydration.value}}+{{system.exhaustion.value}}+{{system.lvl_radiation.value}};
document.getElementById("penalties").value = penalties;

document.getElementById("healing-rate").value = Math.floor(({{system.level.value}} + {{system.abilities.end.value}})/2);

</script>




<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-fields">
	<input id="penalties" name="system.penalties.value" value=""  hidden/>
	<table>
	<tr><td style="width:250px;" class="left">
	<table class="bio">
		<tr>
			<td colspan=3 class="character-name" style="text-align:left;"><input type="text" name="name" value="{{actor.name}}" /><br><br></td></tr>
			<tr><td class="bio-label"><span class="label">Race:</span></td><td colspan=2><input type="text" name="system.race.value" value="{{system.race.value}}"/></td></tr>
			<tr><td class="bio-label"><span class="label">BG:</span></td><td colspan=2><input type="text" name="system.background.value" value="{{system.background.value}}"/></td></tr>			
			<tr><td></td><td></td></tr>
			<tr><td class="bio-label"><span class="label">Lvl:</span></td><td colspan=2><input type="number" name="system.level.value" value="{{system.level.value}}" /></td></tr>
			<tr><td class="bio-label"><span class="label">XP:</span></td><td><input id="xp" type="number" name="system.xp.value" value="{{system.xp.value}}" /></td>
			<td><input id="modifyxp" onchange="updatexp(this.value)" class="modify" placeholder="modify" type="number" /></td></tr>			
			</table>
	
	</td><td>
	<table><tr>
<table class="current-health current-stats" ><tr>
		<td><span class="status-label">HP</span><progress style="width:90%;float:right;" class="statusbar health" value="{{system.health.value}}" max="{{system.healthmax.value}}"> {{system.health.value}} </progress></td></tr>
		<tr>
			<td class="statusnum"><input type="number" name="system.health.value" value="{{system.health.value}}" max="{{system.healthmax.value}}"/> / <input type="number" name="system.healthmax.value" value="{{system.healthmax.value}}" /></td>
		</tr>
	</table>
			<table class="current-stamina current-stats" >
			<tr>
				<td colspan=2><span class="status-label">AP</span><progress style="width:90%;float:right;" class="statusbar stamina" value="{{system.stamina.value}}" max="{{system.staminamax.value}}"> {{system.stamina.value}} </progress></td>
			</tr>
			<tr>
				<td colspan=2 class="statusnum"><input type="number" name="system.stamina.value" value="{{system.stamina.value}}" max="{{system.staminamax.value}}"/> / <input type="number" name="system.staminamax.value" value="{{system.staminamax.value}}" /></td>
			</tr>
		<tr>
			<td><input type="text" name="system.ac.value" value="{{system.ac.value}}">AC</td><td><input type="text" name="system.dt.value" value="{{system.dt.value}}">DT</td>
		</tr>
	</table>
	</td><td style="width:200px;">
	<table>
	<tr>
	<td class="profile-image-td"><img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" /></td></tr><tr><td>
		<table class="current-caps"><tr><td><img style="border:none;" class="custom-icon" src="/systems/arcane-arcade-fallout/assets/caps.webp" /></td>
		<td><input id="caps" type="number" name="system.caps.value" value="{{system.caps.value}}"/></td>
		<td><input id="modifycaps" class="modify" onchange="updatecaps(this.value)" value='' placeholder="modify" type="number" />
		</td></tr>
	</table></td>
	</tr>
	</table>
	</table>
		
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
	<a class="item" data-tab="status">Status</a>
    <a class="item" data-tab="features">Data</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
            <div class="abilities flexcol">
            <div class="ability flexrow flex-group-center">
			<table><tr>
            {{#each system.abilities as |ability key|}}
			<td><label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="d20+@abilities.{{key}}.mod" data-label="{{ability.label}}">{{ability.label}}</label></td>
			{{/each}}
			<tr>
			{{#each system.abilities as |ability key|}}
			<td><input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number" min="0" max="10"/></td>
			{{/each}}
			</tr><tr>
			{{#each system.abilities as |ability key|}}
			<td><span class="ability-mod" data-label="{{ability.label}}"> {{numberFormat ability.mod decimals=0 sign=true}}</span></td>
			{{/each}}
			 </tr></table>    
             
			 
			  
			
            </div>
          </div>
  {{!-- Owned status Tab --}}
    <div class="tab status" data-group="primary" data-tab="status">
      <section>
        {{!-- For the main status list, span the right two columns --}}
        <section>
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/arcane-arcade-fallout/templates/actor/parts/actor-status.hbs"}}
        </section>
      </section>
    </div>



    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- If you want TinyMCE editors to output inline rolls when rendered, you need to pass the actor's roll data to the rollData property. --}}
      {{editor system.biography target="system.biography" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
       {{> "systems/arcane-arcade-fallout/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      {{> "systems/arcane-arcade-fallout/templates/actor/parts/actor-spells.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/arcane-arcade-fallout/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>

