<table>
    <tr>
        <td class="status-info-label">
            <p class="condition" data-condition="Food_and_Drinks">Hunger</p>
        </td>
        <td class="status-info-label">
            <p class="condition" data-condition="Food_and_Drinks">Dehydration</p>
        </td>
        <td class="status-info-label">
            <p class="condition" data-condition="Fatigue_and_Exhaustion">Fatigue</p>
        </td>
         <td>
            <p class="condition" data-condition="Fatigue_and_Exhaustion">Exhaustion</p>
         </td>
        <td class="status-info-label" title="10 Levels of Rads = Dead">
            <p class="condition" data-condition="Radiation">Rad LVL</p>
        </td>
        <td class="status-info-label"
            title="Every 10 levels resets and gives 1 level radiation">
            <p class="condition" data-condition="Irradiation">Irradiation</p>
            <i style="padding: 3px"
               data-subtracted
               data-field="system.irradiated"
               data-fieldvalue="{{irradiated}}"
               class="fas fa-minus-square fakebutton nobackground">
            </i>
            <i style="padding: 3px"
               data-added
               data-field="system.irradiated"
               data-fieldvalue="{{irradiated}}"
               class="fas fa-plus-square fakebutton nobackground">
            </i>
        </td>
    </tr>
    <tr>
        <td class="skill-value">
            <i style="padding: 3px"
            data-statSubtraction
            data-stat="hunger"
            data-type="penalties"
            class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.penalties.hunger.value}}
            <i style="padding: 3px"
            data-statAddition
            data-stat="hunger"
            data-type="penalties"
            class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
            data-statSubtraction
            data-stat="dehydration"
            data-type="penalties"
            class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.penalties.dehydration.value}}
            <i style="padding: 3px"
            data-statAddition
            data-stat="dehydration"
            data-type="penalties"
            class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
            data-statSubtraction
            data-stat="fatigue"
            data-type="penalties"
            class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.penalties.fatigue.value}}
            <i style="padding: 3px"
            data-statAddition
            data-stat="fatigue"
            data-type="penalties"
            class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
            data-statSubtraction
            data-stat="exhaustion"
            data-type="penalties"
            class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.penalties.exhaustion.value}}
            <i style="padding: 3px"
            data-statAddition
            data-stat="exhaustion"
            data-type="penalties"
            class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
            data-statSubtraction
            data-stat="radiation"
            data-type="penalties"
            class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.penalties.radiation.value}}
            <i style="padding: 3px"
            data-statAddition
            data-stat="radiation"
            data-type="penalties"
            class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="status-info-value">
            <progress title="{{irradiated}} out of 10" style ="max-width:70px" class="statusbar"
                      value="{{ irradiated }}"
                      max=10>
                {{ irradiated }}
            </progress>

        </td>
    </tr>
    <tr>
        <td colspan="999">Total Penalties: {{ penaltyTotal }}</td>
    </tr>
</table>
