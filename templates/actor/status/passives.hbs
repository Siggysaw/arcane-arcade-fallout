<table>
    <tr>
        <td title="Calculated: {{system.healingRate.value}} (End + Lvl)/2 &#013;Modifiers: {{system.healingRate.modifiers}} &#013;Manual Edits: {{system.healingRate.base}}">Healing Rate</td>
        <td class="resource-label rollable"
            title="
            d20 + Perception Mod ( {{system.abilities.per.mod}} ) {{#DifferentFrom system.combatSequence.base 0}} + Manual adjustments ({{system.combatSequence.base}}){{/DifferentFrom}} {{#DifferentFrom system.combatSequence.modifiers 0}} + Effects ( {{system.combatSequence.modifiers}} ){{/DifferentFrom}} - Penalties ( {{system.penaltyTotal}} ) + Half-luck ( {{#LckMod system.abilities.lck.mod 2}}{{/LckMod}} )"
            data-rollable
            data-advantage="{{system.combatSequence.advantage}}"
            data-roll="d20+@combatSequence.value+-@penaltyTotal+@luckmod"
            data-label="Performed a Combat Sequence roll!<br> D20 + Combat Sequence - Penalties <br> + Luck Mod / 2">
            Combat Sequence
        </td>
        <td class="rollable"
            data-rollable
            data-roll="d20-{{ penaltyTotal }}"
            data-label="Radiation DC Check: Roll {{system.radiationDC.value}} or higher to succeed"
            title="D20 - PenaltyTotal({{penaltyTotal}}) against Radiation. Roll {{system.radiationDC.value}} or higher to succeed. On Fail gain level of Radiation">
            Rad DC
        </td>
        <td title="12 + Perception Mod ( {{system.abilities.per.mod}} ) {{#DifferentFrom system.passiveSense.base 0}} + Manual adjustments ({{system.passiveSense.base}}){{/DifferentFrom}} {{#DifferentFrom system.passiveSense.modifiers 0}} + Effects ( {{system.passiveSense.modifiers}} ){{/DifferentFrom}}">
            Passive Sense
        </td>
        <td title="Party Charisma Mods Added together divided by 2">Party Nerve</td>
        <td title="Party Sneak Total divided by Player Number">Group Sneak</td>
    </tr>
    <tr>
        <td class="skill-value">
            <i style="padding: 3px"
               data-statSubtraction
               data-stat="healingRate"
               data-type=""
               class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.healingRate.value}}
            <i style="padding: 3px"
               data-statAddition
               data-stat="healingRate"
               data-type=""
               class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
               data-statSubtraction
               data-stat="combatSequence"
               data-type=""
               class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.combatSequence.value}}
            <i style="padding: 3px"
               data-statAddition
               data-stat="combatSequence"
               data-type=""
               class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td style="vertical-align:middle;">
            {{system.radiationDC.value}}
        </td>
        <td class="skill-value">
            <i style="padding: 3px"
               data-statSubtraction
               data-stat="passiveSense"
               data-type=""
               class="fas fa-minus-square fakebutton nobackground"></i>
            {{system.passiveSense.value}}
            <i style="padding: 3px"
               data-statAddition
               data-stat="passiveSense"
               data-type=""
               class="fas fa-plus-square fakebutton nobackground"></i>
        </td>
        <td>{{#Sum system.partyNerve.base system.partyNerve.modifiers }}{{/Sum}}</td>
        <td>{{#Sum system.groupSneak.base system.groupSneak.modifiers }}{{/Sum}}</td>
    </tr>
</table>
