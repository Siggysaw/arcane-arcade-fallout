<div class="grid bordered">
  {{#each skills as |skill key|}}
  <div>
    <button
      type="button"
      data-skill-roll="{{ skill.id }}"
      title="Base: {{ skill.base }} Modifier: {{ skill.modifiers }}"
    >
      {{ skill.label }}
    </button>
  </div>
  <div>
    <div class="flex justify-center gap-5">
      <button class="w-auto" data-statSubtraction data-stat="{{ skill.id }}" data-type="skills">
        <i class="fas fa-minus-square"></i>
      </button>
      {{ skill.value }}
      <button class="w-auto" data-statAddition data-stat="{{ skill.id }}" data-type="skills">
        <i class="fas fa-plus-square"></i>
      </button>
    </div>
  </div>
  {{/each}}
</div>
