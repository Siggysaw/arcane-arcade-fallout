<div class="perks">
    <h1>Perks</h1>
    <div class="grid grid-3col characters">
        <div class="grid grid-5col gap-3">
            {{#each perks as |perk|}}
                <a
                    data-edit
                    data-uuid="{{ perk.uuid }}"
                >
                    <img title="{{ perk.description }}" src="{{ perk.img }}" />
                    {{ perk.name }}
                </a>
            {{/each}}
        </div>
    </div>
</div>

