{
  "name": "falloutzero",
  "version": "2.0.0",
  "description": "CSS compiler for the falloutzero system",
  "scripts": {
    "build": "sass src/scss/falloutzero.scss css/falloutzero.css --style=expanded --no-source-map",
    "watch": "sass src/scss/falloutzero.scss css/falloutzero.css --style=expanded --source-map --watch",
    "generate": "node src/generate-falloutzero-system.mjs",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext mjs --ext js",
    "format": "prettier --write .",
    "prepare": "husky init",
    "pre-commit": "lint-staged"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "lint-staged": {
    "**/*.{mjs,hbs}": [
      "eslint",
      "prettier --write"
    ]
  },
  "author": "Asacolips",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^10.3.10",
    "husky": "^8.0.0",
    "inquirer": "^9.2.15",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prompt": "^1.3.0",
    "renamer": "^5.0.0",
    "replace": "^1.2.2",
    "sass": "^1.53.0"
  }
}
